script.js

document.addEventListener('DOMContentLoaded', function() {
    // Now that the DOM is loaded, we can safely add event listeners
    
    const contactForm = document.getElementById('contact-form');
    
    if (contactForm) {
        contactForm.addEventListener('submit', function(event) {
            event.preventDefault();  // Prevent form from submitting normally

            // Get the values from the form
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const message = document.getElementById('message').value;
            const company = document.getElementById('company').value;

            // Example logic to check if fields are empty (can be expanded)
            if (name === '' || email === '' || phone === '' || message === '' || company === '') {
                alert('Please fill out all fields before submitting.');
            } else {
                // If all fields are filled, you can send data here (e.g., via fetch or XMLHttpRequest)
                console.log('Form submitted:', {
                    name: name,
                    email: email,
                    phone: phone,
                    company: company,
                    message: message
                });

                // Simple success message
                alert('Thank you for your message! We will get back to you soon.');

                // Reset the form after submission
                contactForm.reset();
            }
        });
    } else {
        console.error('Form with ID "contact-form" not found');
    }
});



